---
import Layout from '../layouts/Layout.astro';
---

<Layout>
  <main>
    <h1>Web Design and Frontend Dev</h1>
    <p>Webサイト制作と、フロンエンド開発のお手伝いをしています</p>
  </main>
</Layout>

<style lang="scss">
  main {
    margin: 0 auto;
    padding: 16px;
    max-width: 1080px;
  }
  h1 {
    display: inline-block;
    font-family: 'Helvetica Neue', Helvetica, Arial, sans-serif;
    font-size: 2.5rem;
    font-weight: 800;
    margin: 0;
    color: transparent;
    -webkit-text-fill-color: transparent;
    background-color: #ff4e16;
    background-image: linear-gradient(
      90deg,
      rgba(243, 192, 60, 0.8) 0%,
      rgba(255, 78, 22, 0.8) 46.22%,
      rgba(51, 12, 160, 0.8) 92.45%
    );
    background-clip: text;
    @media screen and (min-width: 640px) {
      font-size: 4rem;
    }
  }
  p {
    margin-top: 8px;
    font-size: 0.875rem;
    @media screen and (min-width: 640px) {
      font-size: 1rem;
    }
  }
</style>
